      <O2PAGPARS>
       <APPLNAME>Z_TALER_UI</APPLNAME>
       <PAGEKEY>SETTINGS.HTM</PAGEKEY>
       <COMPNAME>LS_CONFIG</COMPNAME>
       <VERSION>A</VERSION>
